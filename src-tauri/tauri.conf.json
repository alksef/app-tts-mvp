{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "AppTTS",
  "version": "0.1.0",
  "identifier": "app.tts",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "AppTTS",
        "width": 1300,
        "height": 800,
        "minWidth": 1300,
        "minHeight": 860,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": true,
        "transparent": false,
        "alwaysOnTop": false,
        "skipTaskbar": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        "default"
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icon.ico"
    ],
    "copyright": "",
    "category": "Developer Tool",
    "shortDescription": "Tab+Esc Switcher - Windows keyboard interceptor",
    "longDescription": "A Windows keyboard interceptor that uses Tab+Esc to toggle key blocking mode. Built with Tauri 2.0 and Vue.js 3.",
    "publisher": "TTS"
  },
  "plugins": {}
}
